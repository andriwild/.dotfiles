   xkb_layout custom_ch
   xkb_options caps:ctrl_modifier
   xkb_numlock enabled
}

input "1133:45915:MX_Keys_Keyboard" {
   xkb_layout custom_ch
   xkb_options caps:ctrl_modifier
   xkb_numlock enabled
}

input type:touchpad {
      dwt enabled
      tap enabled
}

# work
input "1130:270:USB_Wireless_Device" {
   xkb_layout custom_ch
   xkb_options caps:ctrl_modifier
   xkb_numlock enabled
}
